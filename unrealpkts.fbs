namespace UnrealCoojaMsg;


enum MsgType : byte { LED = 1, LOCATION, RADIO, PIR, PAUSE, RESUME, SPEED_NORM,
                      SPEED_SLOW, SPEED_FAST, RADIO_DUTY }

struct Vec3 {
  x:float;
  y:float;
  z:float;
}

struct RadioDuty {
  radioOnRatio:double;
  radioTxRatio:double;
  radioRxRatio:double;
  radioInterferedRatio:double;
}

table Message {
  id:int;
  type:int;
  location:Vec3;
  node:[RadioDuty];
  rcvd:[int];
  led:[int];
}


root_type Message;
